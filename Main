# -*- coding: utf8 -*-

import pygame
from pygame.locals import *
pygame.init()
#Ouverture de la fenêtre Pygame
fenetre = pygame.display.set_mode((600, 800))
#Chargement et collage du fond
fond = pygame.image.load("background1.jpg").convert()
fenetre.blit(fond, (0,0))
#Rafraîchissement de l'écran
pygame.display.flip()


coordonneex=268
coordonneey=736
Vaisseau = pygame.image.load("Vaisseau.png").convert_alpha()
fenetre.blit(Vaisseau,(coordonneex,coordonneey))
pygame.display.flip()

pygame.key.set_repeat(3,5)

continuer = 1
#Boucle infinie
while continuer:
    for event in pygame.event.get():   #On parcours la liste de tous les événements reçus
        if event.type == QUIT:     #Si un de ces événements est de type QUIT
            continuer = 0      #On arrête la boucle
        elif event.type == KEYDOWN and event.key == K_d and coordonneex < 532:
            fenetre.blit(fond, (0,0))
            coordonneex+=4
            fenetre.blit(Vaisseau,(coordonneex,coordonneey))
            pygame.display.flip()
        elif event.type == KEYDOWN and event.key == K_a and coordonneex > 0:
            fenetre.blit(fond, (0,0))
            coordonneex+=-4
            fenetre.blit(Vaisseau,(coordonneex,coordonneey))
            pygame.display.flip()    

